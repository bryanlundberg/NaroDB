{
  "name": "narodb",
  "private": true,
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "exports": {
    "require": "./dist/cjs/index.js",
    "import": "./dist/esm/index.js"
  },
  "types": "./dist/types/index.d.ts",
  "version": "0.0.1",
  "type": "commonjs",
  "description": "A simple, fast, and lightweight NoSQL database",
  "keywords": [
    "database",
    "nosql",
    "json",
    "fast",
    "lightweight"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Bryan Lundberg",
  "license": "SSPL",
  "repository": {
    "type": "git",
    "url": "https://github.com/bryanlundberg/NaroDB"
  },
  "homepage": "https://github.com/bryanlundberg/NaroDB",
  "scripts": {
    "dev:bun": "bun ./src/index.ts",
    "dev:node": "npx tsx ./src/index.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "clean": "rmdir /s /q dist",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build": "npm run clean && npm run build:cjs && npm run build:esm",
    "pack": "npm run build && npm pack",
    "docs": "typedoc"
  },
  "dependencies": {
    "fs-jetpack": "^5.1.0",
    "lodash": "^4.17.21",
    "notepack.io": "^3.0.1",
    "typescript": "^5.8.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.6.0",
    "@types/lodash": "^4.17.16",
    "typedoc": "^0.28.2",
    "typedoc-github-theme": "^0.3.0",
    "typedoc-plugin-missing-exports": "^4.0.0",
    "vitest": "^3.0.9"
  }
}
